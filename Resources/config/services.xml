<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="nercury_code_igniter.request_listener.class">Nercury\CodeIgniterBundle\CiRequestListenerService</parameter>
        <parameter key="ci.class">Nercury\CodeIgniterBundle\CiHelperService</parameter>
        <parameter key="nercury_code_igniter.default_action_resolve_listener.class">Nercury\CodeIgniterBundle\DefaultCiActionResolver</parameter>
        <parameter key="nercury_code_igniter.configuration" />
    </parameters>
 
    <services>
        <service id="kernel.listener.nercury_code_igniter_listener" class="%nercury_code_igniter.request_listener.class%">
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="300" />
            <argument type="service" id="ci" />
        </service>
        <service id="ci" class="%ci.class%">
            <argument>%nercury_code_igniter.configuration%</argument>
            <argument type="service" id="logger" />
            <argument type="service" id="kernel" />
            <argument type="service" id="event_dispatcher" />
        </service>
        <service id="nercury_code_igniter.default_action_resolve_listener" class="%nercury_code_igniter.default_action_resolve_listener.class%">
            <tag name="kernel.event_listener" event="nercury.ci_action_resolve" method="onActionResolveEvent" />
        </service>
    </services>

</container>
